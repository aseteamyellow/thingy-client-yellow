<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   android:layout_width="wrap_content"
                                                   android:layout_height="wrap_content"
                                                   android:id="@+id/environment_item_constraint_layout"
                                                   android:layout_margin="8dp">

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <ImageView
                android:layout_width="170dp"
                android:layout_height="170dp"
                android:src="@mipmap/viva_logo"
                android:id="@+id/environment_item_logo"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/environment_item_name"
                android:contentDescription="@string/todo"
                android:background="@color/environment_background"
                app:layout_constraintVertical_bias="0.02" app:layout_column="0" app:layout_row="0"/>

        <TextView
                android:text=""
                android:layout_width="match_parent"
                android:layout_height="0dp" android:id="@+id/environment_item_name"
                android:layout_weight="1" android:gravity="center_vertical|center_horizontal"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>