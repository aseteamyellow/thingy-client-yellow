<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:orientation="vertical"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent"
                                                   android:id="@+id/animal_constraint_layout"
                                                   tools:context="ch.snipy.thingyClientYellow.animal.AnimalFragment">


    <ImageView
            android:layout_width="256dp"
            android:layout_height="256dp"
            app:srcCompat="@drawable/ic_android_blue_64dp"
            android:src="@drawable/ic_android_blue_64dp"
            android:id="@+id/animal_photo"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="16dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toTopOf="parent"
            android:contentDescription="@string/todo"/>

    <TextView
            android:text="@string/animal_name_example"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/animal_name"
            app:layout_constraintTop_toBottomOf="@+id/animal_photo"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="16dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"/>

    <ImageButton
            android:src="@android:drawable/ic_menu_edit"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/animal_fragment_update_button"
            android:background="@color/colorPrimary"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/animal_photo"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintVertical_bias="0.04000002"
            android:contentDescription="@string/todo"/>
</androidx.constraintlayout.widget.ConstraintLayout>
